
@{ ViewData["Title"] = "Edit Account";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}
@model MultiTenant.Application.Models.Tenants.Account.AccountRequest
    <!-- ============================================================== -->
<!-- Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<div class="app-main__inner">
    <div class="app-page-title">
        <div class="page-title-wrapper">
            <div class="page-title-heading">
                <div>
                    <h2 style="font-weight:500">Edit Account</h2>
                </div>
            </div>
        </div>
    </div>
    <ul class="body-tabs body-tabs-layout tabs-animated body-tabs-animated nav">
        <li class="nav-item">
            <a asp-action="Index" class="nav-link ">
                <span>List account</span>
            </a>
        </li>
        @*<li class="nav-item">
            <a asp-action="Create" class="nav-link ">
                <span>Create</span>
            </a>
        </li>*@
    </ul>
    <div class="container-fluid">
        <div class="row">
            <!-- Column -->
            <div class="col-lg-8 col-xlg-9 col-md-7">
                <div class="card">
                    <div class="card-body">
                        <form asp-action="Edit" id="edit-acc-form" class="form-horizontal form-material mx-2">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="IdAcc" class="control-label col-md-12 mb-0"></label>
                                <div class="col-md-12">
                                    @*<label class="form-control ps-0 form-control-line label-color">@Model.AccountEdit.AccId</label>s*@
                                    <input asp-for="IdAcc" readonly class="form-control ps-0 form-control-line label-color " />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Name" style="display:inline" class="control-label col-md-12 mb-0"></label><span class="text-danger">*</span>
                                <div class="col-md-12">
                                    <input asp-for="Name" class="form-control ps-0 form-control-line label-color" onchange="ShowBtnSave_PW()" />
                                    <span asp-validation-for="Name" id="Err_Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Age" class="control-label col-md-12 mb-0"></label><span class="text-danger">*</span>
                                <div class="col-md-12">
                                    <input asp-for="Age" class="form-control ps-0 form-control-line label-color " />
                                    <span asp-validation-for="Age" id="Err_Email" class="text-danger"></span>
                                </div>
                                <span class="text-danger" style="font-size:20px;" id="emailAlready"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="control-label col-md-12 mb-0"></label><span class="text-danger">*</span>
                                <div class="col-md-12">
                                    <input asp-for="Email" class="form-control ps-0 form-control-line label-color " />
                                    <span asp-validation-for="Name" id="Err_Email" class="text-danger"></span>
                                </div>
                                <span class="text-danger" style="font-size:20px;" id="emailAlready"></span>
                            </div>

                           
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                                <input type="button" value="Delete" class="btn btn-outline-danger" onclick="DeleteAcc()" />
                                <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
                                @*<a asp-action="Delete" class="btn btn-outline-danger" onclick="">Delete</a>*@
                                @*<div id="toastDelete">Deleted successfully!</div>*@
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Column -->
        </div>
    </div>
</div>